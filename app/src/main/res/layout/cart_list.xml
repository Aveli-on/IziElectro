<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/cartImage"
            android:src="@drawable/phone"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:id="@+id/cartName"
            android:text="Name"
            android:textColor="@color/lavander"
            android:textSize="17sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/cartImage"/>

        <TextView
            android:id="@+id/QuantityText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@id/cartName"
            android:textAlignment="textEnd"
            android:text="Количество"
            android:textColor="@color/lavander"
            android:textSize="18sp" />
        <EditText
            android:focusable="auto"
            android:id="@+id/Quantity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/QuantityText"
            android:hint="1234"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/cartPriceText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/cartName"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            android:text="Стоимость"
            android:textColor="@color/lavander"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/cartPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/cartPriceText"
            android:layout_marginStart="10dp"
            android:text="123"
            android:textColor="@color/lavander"
            android:textSize="18sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>